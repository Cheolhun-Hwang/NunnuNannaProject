<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape >
            <solid
                android:color="#000"/>
            <stroke
                android:width="1dp"
                android:color="#fff"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape >
            <solid
                android:color="#e36f2d"/>
            <stroke
                android:width="1dp"
                android:color="#e36f2d"/>
        </shape>
    </item>
</selector>